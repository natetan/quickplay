<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yulongproductions.com.quickplay" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindGameActivity"
            android:label="@string/title_activity_find_game"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="yulongproductions.com.quickplay.MainActivity" />
        </activity>
        <activity
            android:name=".ListSegment"
            android:label="@string/title_activity_list_segment"
            android:parentActivityName=".FindGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="yulongproductions.com.quickplay.FindGameActivity" />
        </activity>
        <activity
            android:name=".ClassSegment"
            android:label="@string/title_activity_class_segment"
            android:parentActivityName=".FindGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="yulongproductions.com.quickplay.FindGameActivity" />
        </activity>
        <activity
            android:name=".ProfileSegment"
            android:label="@string/title_activity_profile_segment"
            android:parentActivityName=".FindGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="yulongproductions.com.quickplay.FindGameActivity" />
        </activity>
    </application>

</manifest>
